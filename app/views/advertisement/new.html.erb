<h1>New Ads</h1>
<div class="row">
<%= form_for @advertisements do |f|%>
<div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form_control', placeholder: "Enter post title" %>
</div>
<div class="form-group">
  <%= f.label :copy %>
  <%= f.text_area :copy, rows: 8, class: 'form_control', placeholder: "Enter post body" %>
</div>
<div class="form-group">
  <%= f.label :price %>
  <%= f.number_field :price, class: 'form_control', placeholder: 99 %>
</div>
<div class="form-group">
  <%= f.label :copy %>
  <%= f.submit "save", class: 'btn btn-success' %>
</div>
<% end %>
</div>
